@model QuickTix.Models.Listing

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Listing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owners)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owners.Name)
        </dd>
        <dt class="col-sm-2">Photo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoFileName))
            {
                <img src="https://nscc0511519inet.blob.core.windows.net/uploads/@Model.PhotoFileName"
                     alt="Listing Photo"
                     width="100" height="100"
                     style="border-radius:6px;object-fit:cover;" />
            }
            else
            {
                <p><em>No photo available</em></p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Listings" asp-action="Edit" asp-route-id="@Model.ListingId">Edit</a> |
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>
