@model IEnumerable<QuickTix.Models.Listing>

@{
    ViewData["Title"] = "Index";
}
<h1>Home</h1>
<p>
    <a asp-controller="Listings" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owners.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListingDate)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoFileName))
                    {
                        <img src="https://nscc0511519inet.blob.core.windows.net/uploads/@item.PhotoFileName"
                             alt="Listing Photo"
                             width="100" height="100"
                             style="border-radius:6px;object-fit:cover;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    <a asp-controller="Purchases" asp-action="Create" asp-route-listingId="@item.ListingId" class="btn btn-primary">Buy Ticket</a> |
                    <a asp-controller="Listings" asp-action="Edit" asp-route-id="@item.ListingId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ListingId" class="btn btn-primary">Details</a> |
                    <a asp-controller="Listings" asp-action="Delete" asp-route-id="@item.ListingId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

